@{
    Layout = null; // Esto indica que esta vista no utilizará un diseño (layout) compartido
}

<!DOCTYPE html>
<html>
<head>
    <title>Iniciar sesión</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/img/tree.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .login-title {
            text-align: center;
            color: black; /* Cambia el color del texto a negro */
        }

        .center-image {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.8); /* Fondo blanco semi-transparente */
            padding: 20px;
            border-radius: 10px;
        }

        .logo {
            max-width: 200px; /* Cambia el tamaño máximo del logo */
            width: 100%; /* Ajusta el ancho del logo al 100% del contenedor */
            display: block;
            margin: 0 auto; /* Centra horizontalmente el logo */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 login-box">
                <h2 class="mb-4 login-title">Iniciar sesión</h2>
                <img src="~/img/Logo2.png" class="img-fluid mb-4 center-image logo" alt="Imagen de inicio de sesión">
                <form asp-controller="Login" asp-action="Index" method="post">
                    <div class="form-group">
                        <label for="nombreUsuario">Nombre de usuario:</label>
                        <input type="text" class="form-control" id="nombreUsuario" name="nombreUsuario" required>
                    </div>
                    <div class="form-group">
                        <label for="contraseña">Contraseña:</label>
                        <input type="password" class="form-control" id="contraseña" name="contraseña" required>
                    </div>
                    <div class="form-group">
                        <label for="rol">Rol:</label>
                        <select class="form-control" id="rol" name="rol" required>
                            <option value=""> </option>
                            <option value="Administrador">Administrador</option>
                            <option value="Empleado">Empleado</option>
                        </select>
                    </div>
                    <!-- Aquí agregamos el código para mostrar los mensajes de error -->
                    @if (ViewData.ModelState.IsValid == false)
                    {
                        <div class="alert alert-danger" role="alert">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <span>@error.ErrorMessage</span>
                                <br />
                            }
                        </div>
                    }
                    <!-- Fin del código para mostrar los mensajes de error -->
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
